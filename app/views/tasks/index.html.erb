<h1>--- My todo list ---</h1>

<ul>
  <% @tasks.each do |task|%>
    <li>
      <%= link_to task.title, task_path(task) %> //
      Complete ? <%= task.completed %> //
      <%= link_to "Delete task", delete_task_path(task), data: {turbo_method: :delete, turbo_confirm: "You're about to delete #{task.title} task. Are you sure?"} %>
  </li>
  <% end%>
</ul>

<%= link_to "New task", new_task_path %>
